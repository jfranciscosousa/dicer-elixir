#!/usr/bin/env bash

BLUE='\033[1;34m'
GREEN='\033[1;32m'
RED='\033[1;91m'
BLUE_NB='\033[0;34m'
GREEN_NB='\033[0;32m'
RED_NB='\033[0;91m'
RESET='\033[0m'

# pretty print

pp() {
  printf "\n$1[$2]: $3${RESET}\n"
}

pp_info() {
  pp $BLUE "$1" "$2"
}

pp_success() {
  pp $GREEN "$1" "$2"
}

pp_error() {
  pp $RED "$1" "$2"
}

# print text

pt() {
  printf "\n$1$2${RESET}\n"
}

pt_info() {
  pt $BLUE_NB "$1"
}

not_installed() {
  [ ! -x "$(command -v "$@")" ]
}

ensure_confirmation() {
  read -r "confirmation?please confirm you want to continue [y/n] (default: y)"
  confirmation=${confirmation:-"y"}

  if [ "$confirmation" != "y" ]; then
    exit 1
  fi
}
